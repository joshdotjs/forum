datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// ==============================================

model User {
  id                  Int       @id @default(autoincrement())
  name                String?
  email               String    @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  roles               String    @default("moderator")
  threads             Thread[]
  posts               Post[]
}

// ==============================================

model Post {
  // POST / THREAD
  id        Int       @id @default(autoincrement())
  title     String
  body      String
  comments  Comment[]
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime  @default(now())
}

// ==============================================

model Thread {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  replies   Reply[]
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}

// ==============================================

model Comment {
  // COMMENT / THREAD_REPLY
  id        Int      @id @default(autoincrement())
  name      String
  body      String
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
  createdAt DateTime @default(now())
}

// ==============================================

model Reply {
  // COMMENT / THREAD_REPLY
  id        Int      @id @default(autoincrement())
  // title     String
  body      String
  thread    Thread   @relation(fields: [threadId], references: [id])
  threadId  Int
  createdAt DateTime @default(now())
  // TODO: add in the user id
}

// ==============================================

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

